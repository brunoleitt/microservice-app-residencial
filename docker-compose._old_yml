  db:
    image: mysql:8.0
    restart: always
    environment:
      - MYSQL_ROOT_PASSWORD=root
      - MYSQL_DATABASE=seguros
      - MYSQL_USER=root
      - MYSQL_PASSWORD=root
    ports:
      - 3307:3306
    volumes:
      - db:/var/lib/mysql
    networks:
      - seguros-network

  residencial-app:
    image: residencial-app
    build:
      context: ./residencial
      dockerfile: Dockerfile
    restart: always
    ports:
      - "8082:8082"
    depends_on:
      - db
#      - kafka
#      - zookeeper
    links:
      - db
    networks:
      - seguros-network
    volumes:
      - './core:/usr/src/core'

volumes:
  db:
  residencial-app:

networks:
  seguros-network:
    driver: bridge
